<html lang='en'>

<%- include('partials/header') %>

<body>
    <div class='welcome thin'>
        <h1>Sign Up</h1>
        <form action='/signup' method='POST'>
            <label for='username'>Username</label><br>
            <input type='text' id='username' name='username' required><br>
            
